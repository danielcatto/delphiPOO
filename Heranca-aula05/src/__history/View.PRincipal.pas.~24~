unit View.PRincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, pessoa;

type
  TForm1 = class(TForm)
    Memo1: TMemo;
    Button1: TButton;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    txtNome: TEdit;
    txtNasc: TEdit;
    txtSalario: TEdit;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

uses
  Cliente, CalculoLimiteCredito;

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
  Salario:Currency;
  Credito: Currency;
   pessoa1 : TPessoa;
   pessoa2 : TCliente;
   lCredito : TCredito;
begin

  ////credito
  lCredito := TCredito.Create;


  ///  fim credito
  pessoa1 := TPessoa.Create;
  pessoa2 := TCliente.Create;

  pessoa1.Nome  := 'daniel';
  pessoa1.DataNascimento := '25/09/1980';

  Memo1.Lines.Add('Pessoa1:');
  Memo1.Lines.Add('Nome: ' +  pessoa1.Nome);
  Memo1.Lines.Add('Data Nascimento: ' +  pessoa1.DataNascimento);
  Memo1.Lines.Add('Idade: ' +  pessoa1.Idade.ToString);

  Memo1.Lines.Add('###################################');

  pessoa2.Nome := 'Vinicius';
  pessoa2.DataNascimento := '22/05/2014';
  pessoa2.Salario := 1500.85;

  Salario := pessoa2.Salario;

  lCredito.CalcCredito(Salario);
  Credito := lCredito.Credito;
  pessoa2.ValorCredito := Credito;
  Memo1.Lines.Add('Pessoa2:');
  Memo1.Lines.Add('Nome: ' +  pessoa2.Nome);
  Memo1.Lines.Add('Data Nascimento: ' +  pessoa2.DataNascimento);
  Memo1.Lines.Add('Idade: ' +  pessoa2.Idade.ToString);
  Memo1.Lines.Add('Salário: ' +  pessoa2.Salario.ToString());
  Memo1.Lines.Add('Crédito: ' +  pessoa2.ValorCredito.ToString());

end;

end.
