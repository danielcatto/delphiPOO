unit View.PRincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, pessoa;

type
  TForm1 = class(TForm)
    Memo1: TMemo;
    btnCalcularLimite: TButton;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    txtNome: TEdit;
    txtNasc: TEdit;
    txtSalario: TEdit;
    procedure btnCalcularLimiteClick(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

uses
  Cliente, CalculoLimiteCredito;

{$R *.dfm}

procedure TForm1.btnCalcularLimiteClick(Sender: TObject);
var
  Nome: String;
  DataNasc: String;
  Salario:Currency;
  Credito: Currency;
   pessoa1 : TPessoa;
   pessoa2 : TCliente;
   lCredito : TCredito;
begin
  Nome:= txtNome.Text;
  DataNasc := txtNasc.Text;
  Salario := StrToCurr(txtSalario.Text);

  ////credito
  lCredito := TCredito.Create;


  ///  fim credito
  pessoa2 := TCliente.Create;

  pessoa2.Nome := Nome;
  pessoa2.DataNascimento := DataNasc;
  pessoa2.Salario := Salario;

  Salario := pessoa2.Salario;

  lCredito.CalcCredito(Salario);
  Credito := lCredito.Credito;
  pessoa2.ValorCredito := Credito;
  Memo1.Lines.Add('Cliente');
  Memo1.Lines.Add('Nome: ' +  pessoa2.Nome);
  Memo1.Lines.Add('Data Nascimento: ' +  pessoa2.DataNascimento);
  Memo1.Lines.Add('Idade: ' +  pessoa2.Idade.ToString);
  Memo1.Lines.Add('Salário: ' +  pessoa2.Salario.ToString());
  Memo1.Lines.Add('Crédito: ' +  pessoa2.ValorCredito.ToString());

end;

procedure TForm1.FormCreate(Sender: TObject);
begin
Memo1.Lines.Clear;
end;

end.
